{
  "compilerOptions": {
    "lib": ["es2015"],
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["./node_modules/@types"],
    "module": "CommonJS",
    "target": "ES2018",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
