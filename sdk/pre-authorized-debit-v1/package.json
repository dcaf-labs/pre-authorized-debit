{
    "name": "@dcaf/pre-authorized-debit-v1",
    "packageManager": "yarn@3.6.0",
    "version": "0.1.0",
    "scripts": {
        "build": "yarn build:anchor-client && yarn run tsc",
        "build:program": "cd ../../ && anchor build -p pre_authorized_debit_v1",
        "clean:anchor-client": "rm -rf ./src/anchor-client/accounts && rm -rf ./src/anchor-client/errors && rm -rf ./src/anchor-client/instructions && rm -rf ./src/anchor-client/types",
        "build:anchor-client": "yarn clean:anchor-client && yarn run anchor-client-gen ../../target/idl/pre_authorized_debit_v1.json ./src/anchor-client && yarn lint:fix",
        "regenerate:anchor-client": "yarn clean:anchor-client && yarn build:program && yarn build:anchor-client",
        "lint:fix": "prettier \"*/**/*{.js,.ts}\" -w",
        "lint": "prettier \"*/**/*{.js,.ts}\" --check"
    },
    "dependencies": {
        "@coral-xyz/anchor": "^0.28.0",
        "@coral-xyz/borsh": "^0.28.0",
        "@solana/spl-token": "^0.3.8",
        "@solana/web3.js": "^1.78.4",
        "bn.js": "^5.2.1"
    },
    "devDependencies": {
        "@dcaf/anchor-client-gen": "0.28.1-beta.11",
        "@types/bn.js": "^5.1.0",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "chai": "^4.3.4",
        "mocha": "10.1.0",
        "prettier": "^2.6.2",
        "ts-mocha": "^10.0.0",
        "typescript": "^4.3.5"
    }
}
