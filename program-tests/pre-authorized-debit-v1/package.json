{
  "name": "@dcaf/pad-integration-tests",
  "packageManager": "yarn@3.6.0",
  "private": true,
  "scripts": {
    "test": "yarn test:batch2 && yarn test:batch1",
    "test:batch1": "cd ../../ && anchor test \"pre-authorized-debit-v1/**\" .ts",
    "test:batch2": "cd ../../ && anchor test \"pre-authorized-debit-v1/**\" .2.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.28.0",
    "@noble/hashes": "^1.3.2",
    "@solana/spl-token": "^0.3.8",
    "@solana/web3.js": "^1.78.4"
  },
  "devDependencies": {
    "@dcaf/pad-test-utils": "1.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.3.1",
    "mocha": "10.1.0",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/_tests_/**/*.*"
    ],
    "reporter": [
      "json",
      "json-summary",
      "html",
      "lcov"
    ],
    "report-dir": "coverage"
  }
}
